{
    "name": "node-auth",
    "version": "1.0.0",
    "author": "nnishimura",
    "description": "Nodejs JWT auth provider",
    "main": "src/index.ts",
    "scripts": {
        "build": "tsc",
        "dev": "nodemon",
        "db:client:generate": "prisma generate",
        "db:migrate:deploy": "prisma migrate deploy",
