        "dotenv-expand": "^5.1.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^8.5.1",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.8",
